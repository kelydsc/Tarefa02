<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/TextViewCuriosidade"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#536DFE"
            android:gravity="center"
            android:text="Saber curiosidade"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#00a6ff"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="#303F9F" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="#302B9F"
            android:gravity="center" />

        <TextView
            android:id="@+id/TextView05"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="#162D61"
            android:gravity="center" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:background="#081633"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="206dp"
            android:layout_height="250dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/TextView07"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:background="#9BDCFF"
                android:gravity="bottom" />

            <TextView
                android:id="@+id/TextView08"
                android:layout_width="206dp"
                android:layout_height="125dp"
                android:background="#24057F" />

        </LinearLayout>

        <TextView
            android:id="@+id/TextView09"
            android:layout_width="206dp"
            android:layout_height="250dp"
            android:background="#3F51B5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TextView10"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#1D1D1D" />

    </LinearLayout>

</LinearLayout>